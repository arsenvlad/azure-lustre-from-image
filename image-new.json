{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersions": {
      "type": "object",
      "metadata": {
        "description": "apiVersions JSON object passed from the main template"
      }
    },
    "providerTags": {
      "type": "object",
      "metadata": {
        "description": "Provider tags"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the Lustre nodes"
      }
    },
     "imageName": {
      "type": "string",
      "metadata": {
        "description": "Name of the managed disks image to create from the blob"
      }
    },
    "imageOSDiskBlobUri": {
      "type": "string",
      "metadata": {
        "description": "URL of the OS disk blob from which to create managed image"
      }
    }
  },
  "variables": {
    "apiVersions": "[parameters('apiVersions')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersions').compute.images]",
      "type": "Microsoft.Compute/images",
      "name": "[parameters('imageName')]",
      "location": "[parameters('location')]",
      "tags": {
        "provider": "[toUpper(parameters('providerTags').provider)]"
      },
      "properties": {
        "storageProfile": {
          "osDisk": {
            "osType": "Linux",
            "osState": "Generalized",
            "blobUri": "[parameters('imageOSDiskBlobUri')]",
            "caching": "ReadWrite",
            "storageAccountType": "Standard_LRS"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
